generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Terreiro {
  id        String   @id @default(uuid())
  nome      String
  createdAt DateTime @default(now())
  users     User[]
  frentes   Frente[]
}

model User {
  id         String   @id @default(uuid())
  nome       String
  email      String   @unique
  senha      String
  terreiro   Terreiro @relation(fields: [terreiroId], references: [id])
  terreiroId String
  role       String
  createdAt  DateTime @default(now())
}

model Frente {
  id          String   @id @default(uuid())
  nome        String
  descricao   String?
  terreiro    Terreiro @relation(fields: [terreiroId], references: [id])
  terreiroId  String
  createdAt   DateTime @default(now())
}
